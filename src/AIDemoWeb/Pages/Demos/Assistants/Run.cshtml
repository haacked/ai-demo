@page "{id}"
@model AIDemoWeb.Demos.Pages.Assistants.RunAssistantPageModel

@{
    ViewData["Title"] = "Run Assistant";
}

<section class="m-4 p-4 rounded-xl bg-white border border-gray-300">
    <h1 class="text-lg font-semibold leading-tight">Welcome</h1>
    <p class="mt-2">This is a demonstration of a 1-1 OpenAI Assistant chat bot.</p>

    <form method="post">
        <button type="submit" class="btn btn-primary">New conversation</button>
    </form>

    <div class="mt-2">
        <component type="typeof(Chat)"
                   render-mode="ServerPrerendered"
                   param-AssistantName="@Model.Assistant.Name"
                   param-AssistantId="@Model.Assistant.Id"
                   param-AssistantThreadId="@Model.ThreadId"
                   param-Username="@Model.User.Identity?.Name" />
    </div>

</section>
